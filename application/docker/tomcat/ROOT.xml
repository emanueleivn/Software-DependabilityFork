<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource
            name="jdbc/CineNowDataSource"
            auth="Container"
            type="javax.sql.DataSource"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://${CATALINA_OPTS_DB_HOST}:${CATALINA_OPTS_DB_PORT}/${CATALINA_OPTS_DB_DATABASE}?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"
            username="${CATALINA_OPTS_DB_USER}"
            password="${CATALINA_OPTS_DB_PASSWORD}"
            maxTotal="20"
            maxIdle="10"
            maxWaitMillis="10000"/>
</Context>
